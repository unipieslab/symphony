#!/bin/bash

# Usage: ./monitorpower [file]

file=$1
sleep 1
cnt=0
echo "Sec,PMD,SoC,DIMM1,DIMM2" > ${file}
while true;
do
	printf "%d, %d.%03d, %d.%03d, %d.%03d, %d.%03d\n" $cnt $(i2cget -y 1 0x2f 0x20 w) $(i2cget -y 1 0x2f 0x21 w) $(i2cget -y 1 0x2f 0x22 w) $(i2cget -y 1 0x2f 0x23 w) $(i2cget -y 1 0x2f 0x24 w) $(i2cget -y 1 0x2f 0x25 w) $(i2cget -y 1 0x2f 0x26 w) $(i2cget -y 1 0x2f 0x27 w)  ${file}
	sleep 1;
	let cnt=cnt+1;
done;
